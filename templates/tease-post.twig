{% extends "tease.twig" %}

{% block content %}
<header class="post-header">
  <h2 class="post-title"><a href="{{post.link}}">{{post.title}}</a></h2>
  <p class="post-meta">
    {% for term in post.terms('project') %}
    <a class="post-meta-block" href="{{term.link}}">{{term.name}}</a>
    {% endfor %}
		<span class="post-meta">
			{{ post.post_date|date}}
		</span>
  </p>
</header>
    <div class="{% if post.get_field('project_image') %}post-2cols{% endif %}">

  <div class="pure-g">
		{% if post.get_field('project_image') %}
    <div class="pure-u-1 pure-u-sm-2-5">
      <a href="{{post.link}}">
        <img 
        class="pure-img-responsive"
        src="{{TimberImage(post.get_field('project_image')).src('small')}}" />
      </a>
    </div>
		{% endif %}

    <div class="pure-u-1 {% if post.get_field('project_image') %}pure-u-sm-3-5{% endif %}">
      <div class="post-description">
        <p>{{post.get_preview(100, true, 'More', true)}}</p>
      </div>
    </div>
  </div>
</div>
{% endblock %}

